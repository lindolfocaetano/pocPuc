@model IEnumerable<SegurancaAPI.Models.ManageViewModels.ListUsersViewModel>

@{
    ViewData["Title"] = "Gestão de usuários";
}

@{
    Layout = "/Views/Shared/_Layout.cshtml";
}

@using LogWeb.Helpers;

<h2>Gestão de usuários</h2>

<p>
    <a asp-controller="Account" asp-action="RegisterParceiro" class="btn btn-primary">
        <i class="fas fa-user-plus"></i>
        <span>
            <strong>Adicionar Usuário</strong>
        </span>
    </a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CPF_CNPJ)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NmPerfil)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VlAtivo)
            </th>
            <th>
                @Html.Raw("Ações")
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>

                    @Html.Raw(FormataCpfCnpj.Formatar(item.CPF_CNPJ))

                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NmPerfil)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>*@
                <td>
                    @if (item.VlAtivo == true)
                    {
                        <button class="btn btn-success">
                            <i class="fas fa-user-check"></i>
                        </button>

                    }
                    else
                    {
                        <button class="btn btn-danger">
                            <i class="fas fa-user-minus"></i>
                        </button>

                    }
                </td>
                <td>
                    <a asp-action="UpdateUser" asp-route-id="@item.Id" class="btn btn-primary">
                        <i class="fas fa-user-edit"></i>
                        <span>
                            <strong>Editar</strong>
                        </span>
                    </a>

                </td>
            </tr>
        }
    </tbody>
</table>
